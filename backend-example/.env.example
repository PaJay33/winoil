# Configuration du serveur
PORT=3000
NODE_ENV=development

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/winoil_careers
# Ou pour MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/winoil_careers

# JWT pour l'authentification admin
JWT_SECRET=votre_secret_jwt_ici_changez_moi
JWT_EXPIRE=7d

# Configuration Email (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_USER=careers@winoil.sn
EMAIL_PASSWORD=votre_mot_de_passe_email
EMAIL_FROM=WinOil Carrières <careers@winoil.sn>

# Email de notification pour les RH
HR_EMAIL=rh@winoil.sn

# Upload de fichiers
MAX_FILE_SIZE=5242880
# 5MB = 5 * 1024 * 1024 bytes

# CORS - Origines autorisées
ALLOWED_ORIGINS=http://localhost:3000,https://winoil.sn,https://www.winoil.sn

# Rate limiting
RATE_LIMIT_WINDOW=15
# 15 minutes
RATE_LIMIT_MAX_REQUESTS=10
# Maximum 10 candidatures par 15 minutes

# Dossier d'upload
UPLOAD_DIR=uploads/

# URL du frontend (pour les emails)
FRONTEND_URL=https://winoil.sn
